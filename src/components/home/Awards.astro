---
import Picture from 'astro/components/Picture.astro';

import awards from '@/assets/awards.png';
---

<section class="section flex flex-col items-center justify-center py-10">
  <!-- Heading -->
  <div class="maxwidth">
    <h2 class="mx-auto mb-10 max-w-max rounded-full bg-teal-500 px-6 py-2 text-center text-xl font-semibold text-white">
      Awards & Accolades
    </h2>

    <Picture src={awards} alt="" />
  </div>
</section>

<style>
  @reference "tailwindcss";
  h2 {
    color: white !important;
  }
</style>

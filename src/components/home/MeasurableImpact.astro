---
const shortTerm = [
  'Free from Odor',
  'Sludge decomposition',
  'Potable water for general purpose',
  'Free from Mosquitoes â€“ Better health index',
  'Revival of Aquatic life',
  'Flora & Fauna (Expansion of Native Plant and Animal Species)',
  'No regrowth of Water Hyacinth and other weeds',
  'Considerable reduction in water and vector borne diseases',
];

const longTerm = [
  'Less probability of Flood/ drought',
  'Rainwater recharge due sludge decomposition',
  'Reduced air pollution/ Solid particulates',
  'Better aquatic ecology',
  'Improved Air, Water, Soil quality',
  'Improved Groundwater level',
  'Better socio-economic index',
  'Water body becomes low in viscosity and becomes wavy',
];
---

<section class="section flex flex-col items-center justify-center py-10">
  <!-- Heading -->
  <div
    class="maxwidth relative z-10 after:absolute after:top-0 after:left-1/2 after:z-1 after:hidden after:h-full after:w-[25px] after:-translate-x-1/2 after:rounded-full after:bg-teal-500 md:after:block"
  >
    <h2
      class="relative z-10 mx-auto mb-14 max-w-max rounded-full bg-teal-500 px-6 py-2 text-center text-xl font-semibold text-white"
    >
      Measurable Impact
    </h2>

    <!-- Horizontal section with arrows -->
    <div class="relative mt-6 flex w-full max-w-5xl flex-col items-start justify-center gap-14 px-4 md:flex-row">
      <!-- Short Term -->
      <div class="relative flex-1 rounded-lg bg-white p-4 shadow-sm">
        <span
          class="absolute -top-8 left-0 z-5 w-full rounded-full bg-teal-500 px-4 py-1 text-center text-white md:left-[10px] md:w-[calc(100%_+_28px)] md:before:absolute md:before:top-0 md:before:left-0 md:before:z-0 md:before:h-full md:before:w-[25px] md:before:bg-white md:after:absolute md:after:top-0 md:after:left-0 md:after:z-10 md:after:h-0 md:after:w-0 md:after:border-t-[16px] md:after:border-r-[25px] md:after:border-b-[16px] md:after:border-t-transparent md:after:border-r-teal-500 md:after:border-b-transparent"
        >
          Short Term
        </span>
        <ul class="ml-4 list-outside list-disc">
          {shortTerm.map((item) => <li>{item}</li>)}
        </ul>
      </div>

      <!-- Long Term -->
      <div class="relative mt-4 flex-1 rounded-lg bg-white p-4 shadow-sm">
        <span
          class="absolute -top-8 left-0 w-full rounded-full bg-teal-500 px-4 py-1 text-center text-white md:-left-[28px] md:w-[calc(100%_+_28px)] md:before:absolute md:before:top-0 md:before:right-0 md:before:z-0 md:before:h-full md:before:w-[25px] md:before:bg-white md:after:absolute md:after:top-0 md:after:right-0 md:after:z-10 md:after:h-0 md:after:w-0 md:after:border-t-[16px] md:after:border-b-[16px] md:after:border-l-[25px] md:after:border-t-transparent md:after:border-b-transparent md:after:border-l-teal-500"
        >
          Long Term
        </span>

        <ul class="ml-4 list-outside list-disc">
          {longTerm.map((item) => <li>{item}</li>)}
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  @reference "tailwindcss";
  h2 {
    color: white !important;
  }
</style>

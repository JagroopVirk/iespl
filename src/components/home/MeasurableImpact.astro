<section class="section flex flex-col items-center justify-center py-10">
  <!-- Heading -->
  <div class="maxwidth relative">
    <h2 class="mx-auto mb-14 max-w-max rounded-full bg-teal-500 px-6 py-2 text-center text-xl font-semibold text-white">
      Measurable Impact
    </h2>

    <!-- Horizontal section with arrows -->
    <div class="relative mt-6 flex w-full max-w-5xl flex-col items-start justify-center gap-6 px-4 md:flex-row">
      <!-- Short Term -->
      <div class="relative flex-1 rounded-lg bg-white p-4 shadow-sm">
        <span
          class="absolute -top-8 left-1/2 w-full -translate-x-1/2 rounded-full bg-teal-400 px-4 py-1 text-center text-sm text-white"
        >
          Short Term
        </span>
        <ul class="ml-4 list-outside list-disc">
          {shortTerm.map((item) => <li>{item}</li>)}
        </ul>
      </div>

      <!-- Long Term -->
      <div class="relative flex-1 rounded-lg bg-white p-4 shadow-sm">
        <span
          class="absolute -top-8 left-1/2 w-full -translate-x-1/2 rounded-full bg-teal-400 px-4 py-1 text-center text-sm text-white"
        >
          Long Term
        </span>
        <ul class="ml-4 list-outside list-disc">
          {longTerm.map((item) => <li>{item}</li>)}
        </ul>
      </div>
    </div>


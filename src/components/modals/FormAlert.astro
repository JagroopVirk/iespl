<div id="form-modal-wrapper"></div>

<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const url = new URL(window.location.href);
    const success = url.searchParams.get('success');
    const error = url.searchParams.get('error');

    let alert = { type: '', text: '' };

    if (success === 'true') {
      alert = { type: 'success', text: '✅ Thank you for contacting us. We will get back to you soon.' };
    } else if (error === 'empty') {
      alert = { type: 'error', text: '⚠️ Please fill in all required fields.' };
    } else if (error === 'invalid_email') {
      alert = { type: 'error', text: '⚠️ Invalid email format.' };
    } else if (error === 'send_failed') {
      alert = { type: 'error', text: '❌ Sorry, there was an error sending your message.' };
    } else if (error === 'spam_detected') {
      alert = { type: 'error', text: '🚫 Spam detected. Please try again later.' };
    } else if (error === 'too_many_attempts') {
      alert = { type: 'error', text: '🚫 Too many submissions. Please wait and try again later.' };
    } else if (error === 'invalid_request') {
      alert = { type: 'error', text: '❌ Invalid request.' };
    } else if (error === 'no_resume') {
      alert = { type: 'error', text: '📎 Please upload your resume before submitting.' };
    } else if (error === 'invalid_filetype') {
      alert = { type: 'error', text: '🚫 Only PDF, DOC, or DOCX files are allowed.' };
    } else if (error === 'invalid_mimetype') {
      alert = { type: 'error', text: '🚫 File type not recognized as a valid document.' };
    } else if (error === 'file_too_large') {
      alert = { type: 'error', text: '⚠️ File is too large. Please upload a file under 5 MB.' };
    } else if (error === 'invalid_file_content') {
      alert = { type: 'error', text: '🚫 File appears unsafe and cannot be uploaded.' };
    } else if (error === 'file_upload_failed') {
      alert = { type: 'error', text: '❌ Resume upload failed. Please try again.' };
    }

    if (alert.text) {
      const wrapper = document.getElementById('form-modal-wrapper');

      const overlay = document.createElement('div');
      overlay.className = 'modalBg fixed inset-0 flex justify-center z-50 filter backdrop-blur-sm bg-black/30';

      const innerDiv = document.createElement('div');
      innerDiv.className = 'relative h-[90vh] bg-transparent flex items-center justify-center';

      const modal = document.createElement('div');
      modal.className = `
        relative bg-white rounded-2xl p-10 py-15 max-w-md w-11/12 shadow-xl text-center border
        ${
          alert.type === 'success'
            ? 'border-green-300 bg-green-50 text-green-800'
            : 'border-red-300 bg-red-50 text-red-800'
        }
      `;

      modal.innerHTML = `
        <button class="absolute top-2 right-3 text-lg text-gray-500 hover:text-gray-800" aria-label="Close">&times;</button>
        <div class="text-base font-medium">${alert.text}</div>
      `;

      overlay.appendChild(innerDiv);
      innerDiv.appendChild(modal);
      wrapper.appendChild(overlay);

      // Close on button click
      modal.querySelector('button')?.addEventListener('click', () => {
        wrapper.removeChild(overlay);
      });

      // Close on outside click
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          wrapper.removeChild(overlay);
        }
      });

      // Auto-close after 5 seconds
      setTimeout(() => {
        if (wrapper.contains(overlay)) {
          wrapper.removeChild(overlay);
        }
      }, 5000);
    }
  });
</script>
